<h1>Agent</h1>

<p>
  <b>Name</b><br>
  <%= @agent.name %>
</p>

<p>
  <b>Code</b><br>
  <%= @agent.code %>
</p>

<div class="form-actions">
  <%= link_to 'Back', agents_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_agent_path(@agent), :class => 'btn' %>
  <%= link_to 'Delete', agent_path(@agent), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
